@model TPDojoWeb.BO.Samourai

@{
    ViewData["Title"] = "Details Samourai";
}
<img src="../../assets/sam2.png" width=" = 150px" height="150px" />
<h1>Details Samourai</h1>


<div>
    <h4>Samourai</h4>
 
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Force)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Force)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Arme)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Arme != null)
            {
                @Html.DisplayFor(model => model.Arme.Nom)
            }
            else
            {
                <p>NO ARME</p>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArtMartials)
        </dt>
        <dd class="col-sm-10">
            @if (Model.ArtMartials != null)
            {
                <ul>
                    @foreach (TPDojoWeb.BO.ArtMartial artMartial in Model.ArtMartials)
                    {
                        <li>@artMartial.Nom</li>
                    }
                </ul>

            }

        </dd>
        <dt class="col-sm-2">
           Potentiél
        </dt>

      

    </dl>
</div>
